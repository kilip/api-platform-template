<resources xmlns="https://api-platform.com/schema/metadata">
    <resource class="App\User\Model\User">
        <attribute name="security">is_granted('ROLE_USER')</attribute>
        <attribute name="normalization_context">
            <attribute name="groups">user:read</attribute>
        </attribute>
        <attribute name="denormalization_context">
            <attribute name="groups">user:write</attribute>
        </attribute>

        <itemOperations>
            <itemOperation name="get"/>
            <itemOperation name="patch"/>
            <itemOperation name="delete"/>
        </itemOperations>
    </resource>
</resources>
